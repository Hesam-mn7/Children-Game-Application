<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back2">

    <fragment
        android:id="@+id/fragmentHead"
        android:name="com.example.fragmenthesam.HeadFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        />

    <fragment
        android:id="@+id/fragmentBody"
        android:name="com.example.fragmenthesam.BodyFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"/>

    <fragment
        android:id="@+id/fragmentFoot"
        android:name="com.example.fragmenthesam.FootFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/fragmentBody"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"/>

    <fragment
        android:id="@+id/fragmentResult"
        android:name="com.example.fragmenthesam.ResultFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    
    <ImageView
        android:id="@+id/btnrefresh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/fragmentHead"
        android:layout_margin="10dp"
        android:src="@drawable/refresh"
        android:background="@drawable/borderbtn"
        android:padding="8dp"
        android:foreground="?attr/selectableItemBackground"
        />

    <ImageView
        android:id="@+id/favorite"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnrefresh"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_favorite_24"
        android:background="@drawable/borderbtn"
        android:padding="10dp"
        android:visibility="visible"
        />
    <ImageView
        android:id="@+id/favoriteEmpty"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnrefresh"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_favorite_border_24"
        android:background="@drawable/borderbtn"
        android:padding="10dp"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/btndelete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/fragmentFoot"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_photo_camera_24"
        android:background="@drawable/borderbtn"
        android:padding="11dp"
        android:foreground="?attr/selectableItemBackground"
        />

    <ImageView
        android:id="@+id/music"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btndelete"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_music_note_24"
        android:background="@drawable/borderbtn"
        android:padding="10dp"
        android:visibility="visible"/>
    <ImageView
        android:id="@+id/musicoff"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btndelete"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_music_off_24"
        android:background="@drawable/borderbtn"
        android:padding="10dp"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>
